{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "version": "0.1.0",
  "description": "__MSG_extDescription__",
  "icons": {
    "16": "img/logo16.png",
    "48": "img/logo48.png",
    "128": "img/logo128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "bower_components/jquery/dist/jquery.js",
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "img/logo19.png",
      "38": "img/logo38.png"
    },
    "default_title": "__MSG_browserActionTitle__"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*"
      ],
      "js": [
        "contentscript.js"
      ]
    },
    {
      "matches": [
        "https://accounts.google.com/o/oauth2/approval*"
      ],
      "js": [
        "/oauth2/oauth2_inject.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://www.dwolla.com/robots.txt*"
      ],
      "js": [
        "/oauth2/oauth2_inject.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "notifications",
    "tabs",
    "https://accounts.google.com/o/oauth2/token",
    "https://www.googleapis.com/",
    "history",
    "idle"
  ],
  "web_accessible_resources": [
    "js/modules/*",
    "../bower_components/**/*"
  ]
}
